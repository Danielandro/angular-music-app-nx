{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@angular-music-app/music/api-interfaces-music": [
        "libs/music/api-interfaces-music/src/index.ts"
      ],
      "@angular-music-app/music/feature-auth": [
        "libs/music/feature-auth/src/index.ts"
      ],
      "@angular-music-app/music/data-access-auth": [
        "libs/music/data-access-auth/src/index.ts"
      ],
      "@angular-music-app/music/feature-playlist": [
        "libs/music/feature-playlist/src/index.ts"
      ],
      "@angular-music-app/music/state/state-playlist": [
        "libs/music/state/playlist/src/index.ts"
      ],
      "@angular-music-app/music/util-guards": [
        "libs/music/util-guards/src/index.ts"
      ]
    },
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
